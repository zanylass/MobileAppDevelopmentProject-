        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Greatest Common Factor"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="229dp"
                android:src="@drawable/mathgcf1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="258dp"
                android:src="@drawable/mathgcf2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:src="@drawable/mathgcf3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="303dp"
                android:src="@drawable/mathgcf4" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="297dp"
                android:src="@drawable/mathgcf5" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="297dp"
                android:src="@drawable/mathgcf6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Least Common Multiple"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="25dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="541dp"
                android:src="@drawable/mathlcm1" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="325dp"
                android:src="@drawable/mathlcm2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="336dp"
                android:src="@drawable/mathlcm3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="309dp"
