<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MathContentActivity"
    android:background="@drawable/mathcontent2">

    <TextView
        android:id="@+id/textViewArOperations"
        android:layout_width="250dp"
        android:layout_height="31dp"
        android:text="Arithmetic Operations"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRatios"
        app:layout_constraintVertical_bias="0.147" />

    <TextView
        android:id="@+id/textViewNegNum"
        android:layout_width="205dp"
        android:layout_height="32dp"
        android:text="Negative numbers"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.611"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewArOperations"
        app:layout_constraintVertical_bias="0.137" />

    <TextView
        android:id="@+id/textViewPropNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Properties of numbers"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.651"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNegNum"
        app:layout_constraintVertical_bias="0.118" />

    <TextView
        android:id="@+id/textViewRatios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ratios, rates&amp; percentages"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.213" />

</androidx.constraintlayout.widget.ConstraintLayout>